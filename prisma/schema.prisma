  ACTIVE
  INACTIVE
  RESIGNED
  ON_LEAVE
  ASSIGNED
  REVOKED
  EXPIRED
}

enum ResourceType {
  PHYSICAL
  SOFTWARE
  CLOUD
}

enum AccessStatus {
  REQUESTED
  APPROVED
  GRANTED
  REVOKED
}

enum AccessPermissionLevel {
  READ
  WRITE
  EDIT
  ADMIN
}

